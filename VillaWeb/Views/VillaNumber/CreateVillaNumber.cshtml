@model VillaWeb.Models.ViewModels.VillaNumberCreateVM
<form asp-action="CreateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />
        <div class="row">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNO" class="control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="VillaNumber.VillaNO" class="form-control" />
                <span asp-validation-for="VillaNumber.VillaNO" class="text-danger"></span>
            </div>
            <div class="col-2 pb-3">
                <label asp-for="VillaNumber.VillaID" class="control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--select villa</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-controller="VillaNumber" asp-action="IndexVillaNumbers" class="btn btn-primary form-control ">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>



    </div>

    <br />

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
